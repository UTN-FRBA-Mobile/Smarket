<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShoppingCartFragment"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/tableShoppingCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actions"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/buttonCancelPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCELAR(H)" />

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar un  PRODUCTO(H)" />

    <Button
        android:id="@+id/buttonFinishPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINALIZAR COMPRA(H)" />


</LinearLayout>