<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ar.edu.utn.frba.mobile.smarket.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="ar.edu.utn.frba.mobile.smarket.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_shoppingCartFragment"
            app:destination="@id/shoppingCartFragment" />
    </fragment>

    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="ar.edu.utn.frba.mobile.smarket.ShoppingCartFragment"
        android:label="fragment_shopping_cart"
        tools:layout="@layout/fragment_shopping_cart">
        <action
            android:id="@+id/action_shoppingCartFragment_to_scanProductFragment"
            app:destination="@id/scanProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanProductFragment"
        android:name="ar.edu.utn.frba.mobile.smarket.ScanProductFragment"
        android:label="ScanProductFragment"
        tools:layout="@layout/fragment_scan_product">
        <action
            android:id="@+id/action_scanProductFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/addProductFragment"
        android:name="ar.edu.utn.frba.mobile.smarket.AddProductFragment"
        android:label="AddProductFragment"
        tools:layout="@layout/fragment_add_product"/>
</navigation>